evaluate:
	cargo build --bin=evaluate --release
	for i in `seq 132`; do \
		echo "Problem $$i:"; \
		../target/release/evaluate ../problems/$$i.json $$i.json; \
		echo; \
	done

%.json:
	curl https://icfpc.sx9.jp/best_solution?problem_id=$* > $*.json.tmp
	mv $*.json.tmp $*.json

submit/%: %.json FORCE
	curl -X POST -d @$*.json "http://icfpc.sx9.jp/api/final_submit?problem_id=$*"

submit:
	make evaluate
	echo "Submitting... (with 10 seconds sleep)" && sleep 10
	for i in `seq 132`; do \
		make submit/$$i; \
	done

.PHONY: FORCE
FORCE:
